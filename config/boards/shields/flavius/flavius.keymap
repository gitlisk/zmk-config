#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {  
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                &kp KP_N1   &mo 1   &kp KP_N2   &kp KP_N3
            >;
        }; 
        
        bt_layer {
            bindings = <
                &bootloader   &bt BT_CLR   &bt BT_SEL 0     &none
            >;
        };
    };
};